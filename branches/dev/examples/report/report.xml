<?xml version="1.0" encoding="iso-8859-1"?>
<!-- PHP2Go Examples : report.example.xml, used at report.example.php -->
<report title="PHP2Go Examples - php2go.data.Report" debug="F">
	<layout grid="T" sortable="T">
		<pagination pagesize="20" visiblepages="10" style="REPORT_FIRSTPREVNEXTLAST">
			<param name="useButtons" value="T"/>
			<param name="useSymbols" value="F"/>
			<param name="hideInvalid" value="F"/>
		</pagination>
		<style
			link="links" filter="filters" button="buttons"
			title="title" header="col_header" altstyle="col_odd,col_even"
			highlight="#fff,#ff0000" help='BGCOLOR,"#000000",FGCOLOR,"#FFFFFF",WIDTH,100'/>
		<columns sizes="25,35,20,20">
			<column name="name" alias="Name" help="Client Name"/>
			<column name="address" alias="Address" help="Client Address"/>
			<column name="category" alias="Category" help="Client Category"/>
			<column name="client_id" alias="" align="center" sortable="F"/>
		</columns>
	</layout>
	<variable name="active" default="1" searchorder="G"/>
	<datasource optimizecount="T">
		<fields>name, address, category, client_id</fields>
		<tables>client</tables>
		<clause>active = ~active~</clause>
		<groupby/>
		<orderby>name</orderby>
	</datasource>
	<datafilters>
		<datafilter field="name" label="Client Name" mask="STRING" index="0"/>
		<datafilter field="address" label="Client Address" mask="STRING" index="1"/>
	</datafilters>
</report>
